.detail-container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width:100%;
  height:460rpx;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  /* 经典水平垂直居中方法 */
  left: 50%;
  margin-left: -51rpx;
  top:230rpx;
  margin-top: -55rpx;
  /* top: 180rpx; */
  opacity: 0.7;
}
.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.avatar{
  height: 64rpx;
  width: 64rpx;
  /* 垂直居中 */
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight:300;
  margin-left: 20rpx;
  vertical-align: middle; 
  color: #666;
}
.const-text{
  font-size:24rpx;
  color: #999;
  margin-left: 20rpx;
}
.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-family: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img Image{
  width: 90rpx;
  height: 90rpx;
}
.share-img{
  margin-left:30rpx; 
}
.horizon{
  width:660prx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail{
  color:#666;
  font-size: 24rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}